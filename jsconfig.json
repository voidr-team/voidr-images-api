{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#routes/*": ["src/routes/*"],
      "#models/*": ["src/models/*"],
      "#repositories/*": ["src/infra/repositories/*"],
      "#providers/*": ["src/infra/providers/*"],
      "#domain/*": ["src/domain/*"],
      "#exceptions/*": ["src/domain/exceptions/*"],
      "#config/*": ["src/config/*"],
      "#middlewares/*": ["src/middlewares/*"],
      "#infra/*": ["src/infra/*"]
    },
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true, // force import
    "allowSyntheticDefaultImports": true // force import
  },
  "exclude": ["node_modules"]
}
